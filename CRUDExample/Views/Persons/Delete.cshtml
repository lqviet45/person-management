@model PersonResponse
@{
    ViewBag.Title = "Delete Person";
}

<a asp-controller="Persons" asp-action="Index" class="link-hover">Back to Persons List</a>
<h1>Delete Person</h1>
<h3>Are You sure to delete ?</h3>
<div class="w-50">
    <form asp-controller="Persons" asp-action="Delete" method="post">
        <input type="hidden" asp-for="PersonID" />
        @*PersonName*@
        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="Name" class="form-label pt">Person Name</label>
            </div>

            <div class="flex-1">
                <input disabled="disabled" asp-for="Name" class="form-input" />
                <span asp-validation-for="Name" class="text-red"></span>
            </div>
        </div>

        @*Email*@
        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="Email" class="form-label pt">Email</label>
            </div>

            <div class="flex-1">
                <input disabled="disabled" asp-for="Email" class="form-input" />
                <span asp-validation-for="Email" class="text-red"></span>

            </div>
        </div>
        @*SubmitButton*@
        <div class="form-field flex">
            <div class="w-25">
            </div>

            <div class="flex-1">
                <button type="submit" class="button button-red-back">Delete</button>

                @*<div asp-validation-summary="All" class="text-red"></div>*@

                @if (ViewBag.Errors != null)
                {
                    <div class="text-red ml">
                        <ul>
                            @foreach (string error in ViewBag.Errors)
                            {
                                <li class="ml">@error</li>
                            }
                        </ul>
                    </div>
                }
            </div>
        </div>
    </form>
</div>
